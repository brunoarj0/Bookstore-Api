@using Bookstore.Models;

@model LoanModel

@{
    ViewData["Title"] = "Deletar";
}

<div class="container rounded-5">
    <div class="mb-5 text-center">
        <h1>Deletar</h1>
    </div>
    <form method="post" asp-controller="Loan" asp-action="Delete">
        <input type="hidden" asp-for=Id />
        <h2>Tem certeza que deseja excluir este empréstimo?</h2>
        <div class="mb-3">
            <label for="Receiver" class="form-label">Recebedor:</label>
            <input type="text" class="form-control" asp-for="Receiver" id="Receiver" placeholder="Quem está recebendo o livro?" disabled>
            <span class="text-danger" asp-validation-for="Receiver"></span>
        </div>
        <div class="mb-3">
            <label for="Supplier" class="form-label">Fornecedor:</label>
            <input type="text" class="form-control" asp-for="Supplier" id="Supplier" placeholder="Quem está emprestando o livro?" disabled>
            <span class="text-danger" asp-validation-for="Supplier"></span>
        </div>
        <div class="mb-3">
            <label for="BookName" class="form-label">Livro:</label>
            <input type="text" class="form-control" asp-for="BookName" id="BookName" placeholder="Qual o nome do livro emprestado?" disabled>
            <span class="text-danger" asp-validation-for="BookName"></span>
        </div>
        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-danger w-50">Excluir</button>
            <a class="btn btn-primary w-50" asp-controller="Loan" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>