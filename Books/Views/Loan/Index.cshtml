@using Bookstore.Models;

@model IEnumerable<LoanModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Empréstimos</h1>
        <a class="btn btn-success mx-2" asp-controller="Loan" asp-action="Register">Cadastrar novo empréstimo</a>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Livro</th>
                <th scope="col">Última Atualização</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var loan in Model)
                {
                    <tr>
                        <td>@loan.Receiver</td>
                        <td>@loan.Supplier</td>
                        <td>@loan.BookName</td>
                        <td>@loan.LastModified</td>
                        <td>
                            <a asp-controller="Loan" asp-action="Update" asp-route-id="@loan.Id" class="btn btn-warning mx-2">Editar</a>
                            <a asp-controller="Loan" asp-action="Delete" asp-route-id="@loan.Id" class="btn btn-danger mx-2">Excluir</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>